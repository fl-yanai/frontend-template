{
    "compilerOptions": {
        "target": "ES2017",
        "module": "es2015",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
                "after": true
            }
        ]
    }
}
